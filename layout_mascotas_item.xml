<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_centerVertical="true"
    android:background="#ffff"
    android:padding="5dp"
    android:layout_marginBottom="7dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="#fff"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <ImageView

                android:id="@+id/iv_ofertas_item_imagen1"
                android:layout_width="320dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:contentDescription="asadasdasd"
                android:paddingTop="0dp"

                app:srcCompat="@drawable/perro1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_huesito_izq"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/hueso" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_mascota_nombre"
                            android:layout_width="200dp"
                            android:layout_height="40dp"
                            android:textAlignment="center"
                            android:textSize="20dp"
                            android:text="sadsad">

                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_mascota_puntaje"
                            android:layout_width="30dp"
                            android:layout_height="40dp"
                            android:text="5"
                            android:textAlignment="viewEnd">

                        </TextView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_huesito_der"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:src="@drawable/hueso" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
